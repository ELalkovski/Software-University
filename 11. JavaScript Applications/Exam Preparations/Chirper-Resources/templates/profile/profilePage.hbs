{{> header}}
<section id="viewProfile">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">{{username}}</h2>

            <a id="btnFollow" class="chirp-author" href="#/{{isFollowed}}/:{{userId}}">{{isFollowed}}</a>

            <div id="userProfileStats" class="user-details">
                <span>{{chirpsCount}} chirps</span> |
                <span>{{followingCount}} following</span> |
                <span>{{followersCount}} followers</span>
            </div>
        </div>
        <div id="profileChirps" class="chirps">
            <h2 class="titlebar">Chirps</h2>
            {{#if noSubs}}
            <p>No chirps in database</p>
            {{else}} 
            {{#each chirps}} 
            {{> chirp}}
            {{/each}} 
            {{/if}}
        </div>
    </div>
</section>
{{> footer}}